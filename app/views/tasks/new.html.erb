<%= form_with model: @task, class: "container my-5" do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Title", class: "form-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter task title" %>
  </div>
  <div class="mb-3">
    <%= f.label :details, class: "form-label" %>
    <%= f.text_area :details, class: "form-control", rows: 4, placeholder: "Enter task details" %>
  </div>
  <div class="text-end">
    <%= f.submit "Save Task", class: "btn btn-primary" %>
  </div>
<% end %>
